#!/usr/local/bin/bash

AUTO_LOGIN_DIR=~/ssh-lucy

function init(){
    if [ -f "${AUTO_LOGIN_DIR}/servers" ];then
        echo "å·²ç»åˆå§‹åŒ–è¿‡! æ— éœ€å†æ¬¡åˆå§‹åŒ–!" && exit 1
    else
        if [ ! -d $AUTO_LOGIN_DIR ]; then
            mkdir ~/ssh-lucy
        fi
        touch $AUTO_LOGIN_DIR/servers
        echo "åˆå§‹åŒ–æˆåŠŸ! è¯·åŠ å…¥æœåŠ¡å™¨ä¿¡æ¯. ğŸ™‚" && exit 1
    fi
}

declare -A server_list=()


if [ -f "$AUTO_LOGIN_DIR/servers" ];then
    while read ip user password port name ;do
        server_list["${name}"]="${ip} ${user} ${password} ${port}"
    done < "$AUTO_LOGIN_DIR/servers"  
else
    init
fi

# æŸ¥è¯¢åˆ—è¡¨,ä¸å¸¦å¯†ç 
function list() {
    echo -e "Ip\t\t\tPort\tUser\t\tName"
    for key in ${!server_list[@]}; do
        servers=(${server_list[$key]})
        echo -e "${servers[0]}\t\t${servers[3]}\t${servers[1]}\t\t${key}"| toilet -f term -F border -t --gay
    done
    exit 0
}

# æŸ¥è¯¢åˆ—è¡¨,å¸¦å¯†ç 
function listPwd() {
    echo -e "Ip\t\t\tPort\tUser\t\tPassword\t\t\tName"
    for key in ${!server_list[@]}; do
        servers=(${server_list[$key]})
        echo -e "${servers[0]}\t\t${servers[3]}\t${servers[1]}\t\t${servers[2]}\t\t\t${key}"| toilet -f term -F border -t --gay
    done
    exit 0
}

# å±•ç¤ºå¯ç”¨çš„å‘½ä»¤
function usage() {
    echo "usage:"
    echo "ssha [-h] [-l] [-p] [-f] [-a] [-s <server alias>] [-f <server alias>]"
    exit 0
}

# ç™»å½•æœåŠ¡å™¨
function login(){
    server=(${server_list[$1]})
    if [ ! $server ]; then
        echo "æ‰¾ä¸åˆ°æœåŠ¡" && list && exit 1
    fi
    echo "$USER logging into theã€${server[0]}ã€‘ server"| toilet -f term -F border --gay

	command="
        expect {
                \"*assword\" {set timeout 6000; send \"${server[2]}\n\"; exp_continue ; sleep 3; }
                \"*passphrase\" {set timeout 6000; send \"${server[2]}\r\n\"; exp_continue ; sleep 3; }
                \"yes/no\" {send \"yes\n\"; exp_continue;}
                \"Last*\" {  send_user \"\nsuccessfully logined ã€${server[0]}ã€‘\n\";}
        }
       interact
    ";
   pem=${server[2]}
   if [ -f "$pem" ]
   then
	expect -c "
		spawn ssh -p ${server[3]} -i ${server[2]} ${server[1]}@${server[0]}
		${command}
	"
   else
	expect -c "
		spawn ssh -p ${server[3]} ${server[1]}@${server[0]}
		${command}
	"
   fi
    echo -e "\t$USER logged out theã€${server[0]}ã€‘ server\t" | toilet -f term -F border --gay
}

# æ·»åŠ æœåŠ¡å™¨èŠ‚ç‚¹
function add(){
    read -p "Please enter servername: " servername

    servers=(${server_list[$servername]})
    if [ $servers ]; then
        echo "è¯¥æœåŠ¡å·²å­˜åœ¨, è¯·æ›´æ¢æœåŠ¡åç§°. "
        echo -e "Ip\t\t\tPort\tUser\t\tName"
        echo -e "${servers[0]}\t${servers[3]}\t${servers[1]}\t${servername}"| toilet -f term -F border -t --gay && exit 1
    fi

    read -p "Please enter ip: " ip
    read -p "Please enter username: " username
    read -p "Please enter password: " password
    read -p "Please enter port: " port

    echo -e "${ip}\t\t${username}\t\t${password}\t\t${port}\t\t${servername}" >> $AUTO_LOGIN_DIR/servers
}

# æŸ¥æ‰¾serversæ–‡ä»¶ç›®å½•
function findDir() {
    echo $AUTO_LOGIN_DIR
}

# åˆ é™¤æœåŠ¡å™¨èŠ‚ç‚¹
function delete() {
    server=(${server_list[$1]})
    if [ ! $server ]; then
        echo "åˆ é™¤çš„èŠ‚ç‚¹ä¸å­˜åœ¨" && exit 1
    fi
    read -p "æ˜¯å¦ç¡®è®¤åˆ é™¤è¯¥æœåŠ¡å™¨èŠ‚ç‚¹[$1]: y/n ?" answer
    if [ $answer = 'y' ]; then
        echo 'ç¡®è®¤åˆ é™¤'
        unset server_list[$1]
        num=1
        if [ -f "$AUTO_LOGIN_DIR/servers" ];then
        while read ip user password port name ;do
            if [ $name = $1 ]; then
                break;
            fi
            num=$(($num+1))
        done < "$AUTO_LOGIN_DIR/servers"  
        fi
        sed -i -e "$num"d $AUTO_LOGIN_DIR/servers && echo "åˆ é™¤æˆåŠŸ~" && exit 1
    elif [ $answer = 'n' ]; then
        echo 'å–æ¶ˆåˆ é™¤'
    else
        echo 'è¯·è¾“å…¥æ­£ç¡®å‘½ä»¤: [y/n] '
    fi

}

# clear screen
clear
while getopts hlpaifs:d: ARGS  
do  
case $ARGS in   
    s)
        login $OPTARG
        ;;
    d)
        delete $OPTARG
        ;;
    a)
        add
        ;;
    l)
        list
        ;;
    f)
        findDir
        ;;
    p)
        listPwd
        ;;
    i)
        init
        ;;
    h)  
        usage
        ;;  
    *)  
        usage
        ;;
esac
done